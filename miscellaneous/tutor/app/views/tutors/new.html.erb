<h1> "New Tutor" </h1>
<br>

<%= form_for @tutor do |f| %>

<% if f.object.errors.any? %>
   <div id="error_explanation">
   <h2>The following errors prohibited this form from being saved:</h2>
   <ul>
   <% f.object.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
   </ul>
   </div>
   <% end %>
	
   <p>
	<%= f.label :name %> : <br>
	<%= f.text_field :name %> <br>
   </p>
   <p>
        <%= f.label :category %> : <br>
        <%= f.text_field :category %> <br>
   </p>
   <p>
        <%= f.label :cost %> : <br>
        <%= f.text_field :cost %> <br>
   </p>
   <p>
	<%= f.label :description %> : <br>
	<%= f.text_area :description, :rows=> 6, :cols=> 60 %> <br>
   </p>
   <p>
        <%= f.submit %> <br>
   </p>

<% end %>


<br>
<%= Time.current  %>
